<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151619"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="410dp"
        android:layout_height="63dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/anta"
        android:paddingHorizontal="15dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="48dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sumar"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginEnd="95dp"
        android:backgroundTint="#2E3033"
        android:fontFamily="@font/anta"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restar" />

    <Button
        android:id="@+id/restar"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#2E3033"
        android:fontFamily="@font/anta"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/igual"
        app:layout_constraintTop_toBottomOf="@+id/multiplicar" />

    <Button
        android:id="@+id/multiplicar"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#2E3033"
        android:fontFamily="@font/anta"
        android:text="x"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@+id/igual"
        app:layout_constraintTop_toBottomOf="@+id/dividir" />

    <Button
        android:id="@+id/dividir"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="95dp"
        android:backgroundTint="#2E3033"
        android:fontFamily="@font/anta"
        android:text="รท"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/siete"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="228dp"
        android:fontFamily="@font/anta"
        android:onClick="botones"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/ocho"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:layout_marginTop="228dp"
        android:fontFamily="@font/anta"
        android:onClick="botones"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/siete"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/nueve"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:layout_marginTop="228dp"
        android:fontFamily="@font/anta"
        android:onClick="botones"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/ocho"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/cuatro"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:background="#000000"
        android:fontFamily="@font/anta"
        android:onClick="botones"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siete" />

    <Button
        android:id="@+id/cinco"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:fontFamily="@font/anta"
        android:onClick="botones"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cuatro"
        app:layout_constraintTop_toBottomOf="@+id/ocho" />

    <Button
        android:id="@+id/seis"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:fontFamily="@font/anta"
        android:onClick="botones"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cinco"
        app:layout_constraintTop_toBottomOf="@+id/nueve" />

    <Button
        android:id="@+id/uno"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:background="#000000"
        android:fontFamily="@font/anta"
        android:onClick="botones"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cuatro" />

    <Button
        android:id="@+id/dos"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:background="#000000"
        android:fontFamily="@font/anta"
        android:onClick="botones"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/uno"
        app:layout_constraintTop_toBottomOf="@+id/cinco" />

    <Button
        android:id="@+id/tres"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:background="#000000"
        android:fontFamily="@font/anta"
        android:onClick="botones"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/dos"
        app:layout_constraintTop_toBottomOf="@+id/seis" />

    <Button
        android:id="@+id/cero"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/anta"
        android:onClick="botones"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uno" />

    <Button
        android:id="@+id/igual"
        android:layout_width="80dp"
        android:layout_height="180dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#45AE4A"
        android:fontFamily="@font/anta"
        android:onClick="igual"
        android:text="="
        android:textColor="@color/white"
        android:textSize="40dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear" />

    <Button
        android:id="@+id/punto"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="78dp"
        android:layout_height="90dp"
        android:fontFamily="@font/anta"
        android:onClick="botones"
        android:text="."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cero"
        app:layout_constraintTop_toBottomOf="@+id/dos" />

    <Button
        android:id="@+id/delete"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#2E3033"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="C"
        android:textColor="@android:color/transparent"
        android:textSize="0dp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_input_delete"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="50dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/clear"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#2E3033"
        android:fontFamily="@font/anta"
        android:text="CE"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:fontFamily="@font/anta"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@android:color/darker_gray"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.995"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/potencia"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#2E3033"
        android:fontFamily="@font/anta"
        android:text="^"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultado" />

    <Button
        android:id="@+id/porcentaje"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#2E3033"
        android:fontFamily="@font/anta"
        android:text="%"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/potencia"
        app:layout_constraintTop_toBottomOf="@+id/resultado" />

    <Button
        android:id="@+id/raiz"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#2E3033"
        android:fontFamily="@font/anta"
        android:text="โ"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/porcentaje"
        app:layout_constraintTop_toBottomOf="@+id/resultado" />

    <!-- Floating Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_main"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:src="@android:drawable/ic_menu_add"
        android:tintMode="multiply"
        app:backgroundTint="#2E3033"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="40dp"
        app:useCompatPadding="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imc"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/imc"
        android:tintMode="multiply"
        android:visibility="gone"
        app:maxImageSize="40dp"
        app:backgroundTint="#2E3033"
        app:layout_constraintBottom_toTopOf="@id/fab_main"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/conversor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:tintMode="multiply"
        android:src="@drawable/conversor"
        app:maxImageSize="40dp"
        app:backgroundTint="#2E3033"
        app:layout_constraintBottom_toTopOf="@id/imc"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>